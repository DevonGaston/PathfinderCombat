<Window x:Class="PathfinderCombat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PathfinderCombat"
        mc:Ignorable="d"
        Title="Pathfinder Battle Simulator" Height="350" Width="525" Background="Bisque">
    <Grid>
        <Button x:Name="attackButton" Content="Battle" Click ="Battle" HorizontalAlignment="Left" VerticalAlignment="Top" Width="123" Margin="188,242,0,0" Height="38"/>
        <TextBlock x:Name="GUI" FontFamily="Century Gothic"  HorizontalAlignment="Left" Height="130" Margin="119,68,0,0" TextWrapping="Wrap" Text="Welcome to the Pathfinder Battle Simulator!" VerticalAlignment="Top" Width="258" Background="Turquoise" />
        <Button x:Name="createButton" Content="Create Characters" Click="create" HorizontalAlignment="Left" VerticalAlignment="Top" Width="122" Margin="348,242,0,0" Height="38"/>
        <Button x:Name="clearButton" Content="Clear Battle Queue" Click="clear"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="113" Margin="42,242,0,0" Height="38"/>

        <TextBlock x:Name="Stats" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Battle Statistics: Coming Soon" VerticalAlignment="Top" Height="56" Width="82" Background="AliceBlue" Margin="10,23,0,0"/>
        <Button x:Name="classButton1" Content="Create Living Dead" Click ="createUndead" HorizontalAlignment="Left" VerticalAlignment="Top" Width="110" Margin="397,152,0,0" Height="32" Visibility="Hidden"/>
    </Grid>
</Window>
