<Window x:Class="PathfinderCombat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PathfinderCombat"
        mc:Ignorable="d"
        Title="Pathfinder Battle Simulator" Height="350" Width="844.247" Background="Bisque">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="153*"/>
            <RowDefinition Height="166*"/>
        </Grid.RowDefinitions>
        <Button x:Name="attackButton" Content="Battle" Click ="Battle" HorizontalAlignment="Left" VerticalAlignment="Top" Width="123" Margin="42,44,0,0" Height="38" Grid.Row="1"/>
        <ScrollViewer VerticalScrollBarVisibility= "Visible" Height="Auto" Width="300" HorizontalScrollBarVisibility="Disabled" Margin="149,0" Grid.RowSpan="2">
            <TextBlock x:Name="GUI" FontFamily="Century Gothic"  HorizontalAlignment="Left" Height="100" Width ="300" TextWrapping="Wrap" Text="Welcome to the Pathfinder Battle Simulator!" VerticalAlignment="Center"  Background="Turquoise" />
        </ScrollViewer>
        <Button x:Name="createButton" Content="Create Characters" Click="create" HorizontalAlignment="Left" VerticalAlignment="Top" Width="122" Margin="43,129,0,0" Height="38" Grid.RowSpan="2"/>
        <Button x:Name="clearButton" Content="Clear Battle Queue" Click="clear"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="113" Margin="42,109.874,0,0" Height="38" Grid.Row="1"/>

        <TextBlock x:Name="Stats" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Battle Statistics: Coming Soon" VerticalAlignment="Top" Height="56" Width="82" Background="AliceBlue" Margin="42,10,0,0"/>
        <Button x:Name="classButton1" Content="Create Living Dead" Click ="createUndead" HorizontalAlignment="Left" VerticalAlignment="Top" Width="108" Margin="81,133.874,0,0" Height="32" Visibility="Hidden" Grid.Row="1" />
    </Grid>
</Window>
